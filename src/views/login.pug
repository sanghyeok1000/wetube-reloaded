extends base.pug


block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="Username", name="username", type="text", required) 
        input(placeholder="Password", name="password", type="password", required) 
        input(type="submit", value="Login")
        br
        a(href="https://github.com/login/oauth/authorize?client_id=c05df741cbe45407fb3c&allow_signup=false&scope=user:email") Continue to github &rarr; 
    div 
        span Don't have an account?
        a(href="/join")  Create one now &rarr;